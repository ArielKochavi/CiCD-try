pipeline {
    agent {
        docker {
            image 'python:latest'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo "Building..."
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
                sh 'python app.py'
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivering..."
                sh 'echo "doing delivery stuff..."'
            }
        }
    }
}
