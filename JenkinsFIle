pipeline {
    agent {
        docker {
            image 'python:latest'
            args '-u root:root' // אופציונלי להרשאות
        }
    }

    triggers {
        pollSCM('* * * * *') // polls every minute
    }

    stages {
        stage('Build') {
            steps {
                echo "Building..."
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
                sh 'python3 app.py'
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivering..."
                sh 'echo "doing delivery stuff..."'
            }
        }
    }
}
