pipeline {
    agent {
        docker {
            image 'python:3.11-alpine'
        }
    }

    triggers {
        pollSCM('* * * * *') // בודק שינויים כל דקה
    }

    stages {
        stage('Build') {
            steps {
                echo "📦 Installing dependencies..."
                sh 'python3 -m pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                echo "🧪 Running tests..."
                sh 'python3 app.py'
            }
        }

        stage('Deliver') {
            steps {
                echo "🚀 Delivering..."
                sh 'echo "doing delivery stuff..."'
            }
        }
    }
}
