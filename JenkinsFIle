pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                bat 'python app.py'
            }
        }
        stage('Deliver') {
            steps {
                bat 'echo "doing delivery stuff..."'
            }
        }
    }
}
