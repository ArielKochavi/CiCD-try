pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ArielKochavi/CiCD-try'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("html-site:latest")
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh '''
                    docker rm -f html-site || true
                    docker run -d -p 8081:80 --name html-site html-site:latest
                    '''
                }
            }
        }
    }
}
