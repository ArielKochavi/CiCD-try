pipeline {
    agent { label 'docker-agent-python' }

    triggers {
        pollSCM('* * * * *') // polls every minute, adjust if needed
    }

    stages {
        stage('Build') {
            steps {
                echo "Building..."
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
                sh 'python3 app.py'
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivering..."
                sh 'echo "doing delivery stuff..."'
            }
        }
    }
}
